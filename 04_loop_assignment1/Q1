package homework4;
import java.util.Scanner;
public class Q1 {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int num;
		int i =1;
		int sum = 0;
		System.out.println("100이하의 양의 정수를 입력하시오.");
		num =input.nextInt();
		
		while(i<=num) {
			sum +=i;
			i++;
		}
		System.out.println(sum);
		input.close();
	}
	
}
